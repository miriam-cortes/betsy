
<section>
<div class="grid-block">
<div class="small-12 medium-6 grid-content">
<%= form_tag(controller: "orders", action: "show", method: "get") do |f| %>
  <h4><%= label_tag :product.name %></h4>
    <%= text_field_tag :product_id %>
    <div class="col-xs-4">
    <%= number_field_tag :quantity, order_item.quantity.to_i, class: "form-control", min: 1 %>
    <%= hidden_field_tag :product_id, product.id %>
  </div>

  <%= label_tag :description %>
  <%= text_field_tag :description %>
    <% end %>
</div>
</div>
</section>
